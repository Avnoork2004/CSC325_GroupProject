<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../stylesheets/globalStyle.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.csc325_gp.controllers.AccountInfoController">
    <children>
        <ScrollPane layoutX="54.0" layoutY="100.0" prefHeight="200.0" prefWidth="200.0">
            <content>
                <AnchorPane fx:id="tabsaccountinfo" minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <Label fx:id="accountinfotext" layoutX="44.0" layoutY="83.0" text="Tabs of Account Info" />
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
        <Label layoutX="66.0" layoutY="76.0" text="History">
            <font>
                <Font size="19.0" />
            </font>
        </Label>
        <Label layoutX="54.0" layoutY="26.0" />
        <Label layoutX="514.0" layoutY="26.0" />
        <VBox layoutX="10.0" layoutY="29.0" prefHeight="38.0" prefWidth="600.0">
            <children>
                <fx:include source="toolbar.fxml" />
            </children>
        </VBox>
        <Pane layoutX="302.0" layoutY="100.0" prefHeight="200.0" prefWidth="264.0">
            <children>
                <VBox layoutX="6.0" layoutY="6.0" prefHeight="188.0" prefWidth="252.0">
                    <children>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <Label text="Username:">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="userField" disable="true" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0" spacing="4.0">
                            <children>
                                <Label text="Password:">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="passField" alignment="CENTER_RIGHT" disable="true" HBox.hgrow="ALWAYS">
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin>
                                </TextField>
                            </children>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0" spacing="31.0">
                            <children>
                                <Label text="Email:">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="emailField" disable="true" prefHeight="25.0" prefWidth="182.0" />
                            </children>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0" spacing="12.0">
                            <children>
                                <Label text="Date Of Birth:">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="dobField" disable="true" prefHeight="25.0" prefWidth="150.0" />
                            </children>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0" spacing="6.0">
                            <children>
                                <Label text="Zip Code:">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="zipField" disable="true" prefHeight="25.0" prefWidth="182.0" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </Pane>
        <Button fx:id="editButton" layoutX="416.0" layoutY="313.0" mnemonicParsing="false" onAction="#allowEdits" text="Edit" />
        <Button fx:id="cancelButton" disable="true" layoutX="331.0" layoutY="313.0" mnemonicParsing="false" onAction="#cancelEdits" text="Cancel" visible="false" />
        <Button fx:id="applyButton" disable="true" layoutX="488.0" layoutY="313.0" mnemonicParsing="false" onAction="#applyEdits" text="Apply" visible="false" />
    </children>
</AnchorPane>
